{{#if truncated}}
  <EmberExtendedElements::basicDropdownVTwoHover as |dd|>
    <dd.Trigger class="wild-type-deletion-trigger-content">
    {{truncated}}{{afterTruncatedText}}
    </dd.Trigger>
    <dd.Content>
      <div class="wild-type-deletion-hover-content box-arrow bg-white body-text monospaced border rounded padding-lg card-box-shadow">
        {{text}}
      </div>
    </dd.Content>
  </EmberExtendedElements::basicDropdownVTwoHover>
{{else}}
  {{text}}
{{/if}}